{%- comment -%}Добавление 00 ил 0 в конец цены{%- endcomment -%}

{% capture itemPrice %}{{item.Price}}{% endcapture %}
{% assign itemPrice = itemPrice | replace: '\.', ','%}
{% assign itemPriceArr = itemPrice | split: ',' %}
{% assign itemPriceArrSize = itemPriceArr | size %}
{% if itemPriceArrSize > 1 %}
  {% if 2 > itemPriceArr[1].size %}
    {% capture itemPrice %}{{itemPrice}}0{% endcapture %}
  {% endif %}
{% else %}
  {% capture itemPrice %}{{itemPrice}},00{% endcapture %}
{% endif %}


